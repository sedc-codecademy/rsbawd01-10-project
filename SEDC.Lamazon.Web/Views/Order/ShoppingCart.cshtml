@using SEDC.Lamazon.Services.ViewModels.Order
@using SEDC.Lamazon.Services.ViewModels.OrderItem

@model OrderViewModel

<div class="card shadow">
    <div class="card-header">
        <div class="row px-4">
            <div class="col-6">
                <h5 class="pt-2">Your Shopping Cart</h5>
            </div>
        </div>
    </div>

    <div class="card-body">
        <div class="row">

            <div class="col-md-10">

                @foreach (OrderItemViewModel orderItem in Model.Items)
                {
                    <div class="row border-bottom">

                        <div class="col-1 text-center">
                            <img src="@orderItem.Product.ImageUrl" class="card-img-top rounded w-100" />
                        </div>

                        <div class="col-12">
                            <h5 class="text-uppercase text-secondary">@orderItem.Product.Name</h5>
                            <p><small>@orderItem.Product.Description</small></p>
                        </div>

                        <div class="col-12 text-center row">
                            <div class="col-3 text-md-right">
                                <h6 class="fw-semibold">
                                    @orderItem.Product.Price
                                    <span class="text-muted"> x </span> @orderItem.Qty
                                </h6>
                            </div>

                            <div class="col-6">
                                <div class="w-75 btn-group" role="group">
                                    <a class="btn btn-outline-primary"> <strong> + </strong> </a>
                                    <a class="btn btn-outline-primary"> <strong> - </strong> </a>
                                </div>
                            </div>

                            <div class="col-3">
                                <a class="btn btn-danger">DELETE</a>
                            </div>

                        </div>
                    </div>
                }

            </div>
        </div>
    </div>

    <div class="card-footer">
        <div class="row">
            <div class="col-4 offset-md-4" >
                <ul class="list-group mb-4">
                    <li class="d-flex justify-content-between align-items-center">
                        <h5 class="text-uppercase"> Total (USD) </h5>
                        <h4 class="fw-bolder"> @Model.TotalPrice.ToString("c") </h4>
                    </li>
                </ul>
            </div>
        </div>

        <div class="row"> 
            <div class="col-md-2 offset-md-5">
                @* If you are implementing + and - feature, you need to re-thing about this one or use the FORM just a small tip *@
                <a asp-action="Summary" class="btn btn-primary"> Continue </a>
            </div>
        </div>
    </div>
</div>