@model SEDC.Lamazon.Services.ViewModels.User.RegisterUserViewModel;

<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">

                <div class="card-header">
                    <h2>Register new user</h2>
                </div>

                <div class="card-body">

                    @using (Html.BeginForm("Register","User", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control"></input>
                        </div>

                        <div class="form-group">
                            <label asp-for="FullName" class="control-label"></label>
                            <input asp-for="FullName" class="form-control"></input>
                        </div>

                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control"></input>
                        </div>

                        <div class="form-group">
                            <label asp-for="ConfirmationPassword" class="control-label"></label>
                            <input asp-for="ConfirmationPassword" class="form-control"></input>
                        </div>

                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="control-label"></label>
                            <input asp-for="PhoneNumber" class="form-control"></input>
                        </div>

                        <div class="form-group">
                            <label asp-for="StreetAdress" class="control-label"></label>
                            <input asp-for="StreetAdress" class="form-control"></input>
                        </div>

                        <div class="form-group">
                            <label asp-for="City" class="control-label"></label>
                            <input asp-for="City" class="form-control"></input>
                        </div>

                        <div class="form-group">
                            <label asp-for="State" class="control-label"></label>
                            <input asp-for="State" class="form-control"></input>
                        </div>

                        <div class="form-group">
                            <label asp-for="PostalCode" class="control-label"></label>
                            <input asp-for="PostalCode" class="form-control"></input>
                        </div>

                        <div class="form-group">

                            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Register</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>